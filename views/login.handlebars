            <div class="card">
                <div class="card-action black white-text">
                    <h3>Coffee Quiz Login</h3>
                </div>
                <div class="card-content">
                    <form action="/api/add" , method="POST">
                    <div class="form-field">
                        <label for="username">Name</label>
